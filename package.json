{
  "name": "tracegl",
  "author": "Rik Arends",
  "description": "TraceGL is a JavaScript codeflow visualization and debugging tool built using WebGL.",
  "version": "0.0.1",
  "license": "MPL 2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:e-cloud/tracegl.git"
  },
  "maintainers": [
    "e-cloud <saintscott119@gmail.com>"
  ],
  "keywords": [
    "tracegl",
    "debug",
    "visualization"
  ],
  "bugs": {
    "url": "https://github.com/e-cloud/tracegl/issues"
  },
  "homepage": "https://github.com/e-cloud/tracegl",
  "bin": {
    "tracegl": "./tracegl.js"
  },
  "preferGlobal": true,
  "main": "tracegl.js",
  "dependencies": {
    "acorn": "^4.0.4"
  },
  "scripts": {
    "precommit": "tslint core/ trace/",
    "release": "standard-version"
  },
  "devDependencies": {
    "cli-table": "^0.3.1",
    "husky": "^0.12.0",
    "standard-version": "^4.0.0",
    "tslint": "^4.2.0",
    "typescript": "^2.1.4",
    "validate-commit-msg": "^2.8.2"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\n# allowed type: feat, fix, docs, style, refactor, example, perf, test, chore, revert\n# subject no more than 50 chars\n# a body line no more than 72 chars"
    }
  }
}
